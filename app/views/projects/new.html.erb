<div class='row'>
	<div class="col s12 m12 l12 left-align ">
		<h3 id='welcome'>Create a Project</h3>	


	</div>
</div>

	<div class="row">
		<div class="col s12 m6 l6">
			<h5>Enter the location of your project by neighborhood, address or park: </h5>

			<!-- form to enter location -->
			<form id="location-form">
				<input type="text" id="location-input" name="locationInput">
				<br>
				<button type="submit">Submit</button>
			</form>

			<!-- google map -->
			<div id='map'></div>

		</div>


		<!-- right side of page -->
		<div id='deets' class="col s12 m6 l4 ">Enter the project details!!
			
			<!-- form to create a new project -->
			<%= form_for Project.new do |f| %><br>
			<%= f.label :Project_name %><br><br>
			<%= f.text_field :name %><br>
			<%= f.label :Project_description %><br>
			<%= f.text_field :description %><br><br>
			<%= f.label :Date %><br>
			<%= f.date_field :date %><br><br>
			<%= f.label :Photo_image %><br>
			<%= f.file_field :photo %><br><br>
			<%= f.label :Volunteers %>
			<%= f.number_field :people %>
			<%= f.label :neighborhood%><br>
          
            <%= f.select :location,  options_for_select([['Chelsea', 1],["Hell's Kitchen", 2], ['Midtown', 3], ['Midtown East', 4], ['East Village', 5], ['Lower East Side', 6], ['West Village', 7], ["Greenwich Village", 8], ['SoHo', 9], ['Tribeca', 10], ['Chinatown', 11], ['Financial District',12 ], ['Upper West Side', 13], ['Morningside Heights', 14], ['Harlem', 15], ['East Harlem', 16],['Spanish Harlem', 17], ['Upper East Side', 18]])%>
            <br>
			<span class='waves-effect waves-light btn'><%= f.submit %></span><br><br>
		<% end %>
		<%= link_to "Back", projects_path %></button><br><br>
		</div>